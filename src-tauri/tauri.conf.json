{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Photobooth",
  "version": "0.2.0",
  "identifier": "com.tauri.photobooth",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "tsc -b && vite build"
  },
  "app": {
    "windows": [
      {
        "title": "Photobooth",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": true,
        "center": true,
        "minimizable": false,
        "closable": false,
        "contentProtected": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "nsis",
      "msi",
      "app",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}